<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nesada.c4q.nyc.scientificcalculator.Calculator"
    android:background="@color/grey"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_weight="2"
        android:gravity="right"
        android:layout_margin="10dp"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:textSize="20sp"
            android:id="@+id/tavFinish"
            android:textCursorDrawable="@color/blueDark"
            android:layout_weight="1"

            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="#ffffff"
            android:textSize="40sp"
            android:id="@+id/tvStart"
            android:textCursorDrawable="@color/blueDark"
            android:layout_weight="1"
            android:gravity="bottom"

            />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="@color/grey"
        android:layout_weight="5"
        android:layout_margin="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:background="@color/grey"

            >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#00cc00"
                android:layout_weight="1"
                android:layout_marginRight="10dp"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="#e9e9e6"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="x!"
                        android:textSize="20sp"
                        android:background="@drawable/my_button_bg2"
                        android:textColor="@color/blue"


                        android:nestedScrollingEnabled="false"
                        android:textAllCaps="false" />
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/sqrt"
                        android:textSize="20sp"
                        android:background="@drawable/my_button_bg2"
                        android:textColor="@color/blue"

                        android:textAllCaps="false" />
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="%"
                        android:textSize="20sp"
                        android:background="@drawable/my_button_bg2"
                        android:textColor="@color/blue"

                        android:textAllCaps="false" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="#f1eded"
                    android:layout_weight="1"
                    android:orientation="horizontal">


                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="sin"
                        android:textSize="20sp"
                        android:background="@drawable/my_button_bg2"
                        android:textColor="@color/blue"


                        android:nestedScrollingEnabled="false"
                        android:textAllCaps="false" />
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="cos"
                        android:textSize="20sp"
                        android:background="@drawable/my_button_bg2"
                        android:textColor="@color/blue"

                        android:textAllCaps="false" />
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="tan"
                        android:textSize="20sp"
                        android:background="@drawable/my_button_bg2"
                        android:textColor="@color/blue"

                        android:textAllCaps="false" />



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="#efebeb"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="ln"
                        android:textSize="20sp"
                        android:background="@drawable/my_button_bg2"
                        android:textColor="@color/blue"


                        android:textAllCaps="false" />
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="log"
                        android:textSize="20sp"
                        android:background="@drawable/my_button_bg2"
                        android:textColor="@color/blue"

                        android:textAllCaps="false" />
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="1/x"
                        android:textSize="20sp"
                        android:background="@drawable/my_button_bg2"
                        android:textColor="@color/blue"

                        android:textAllCaps="false" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="#e9e6e6"

                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                       android:text="@string/exponentex"
                        android:textSize="20sp"
                        android:background="@drawable/my_button_bg2"
                        android:textColor="@color/blue"

                        android:textAllCaps="false" />
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/exponentX2"
                        android:textSize="20sp"
                        android:background="@drawable/my_button_bg2"
                        android:textColor="@color/blue"

                        android:textAllCaps="false" />
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/exponentYx"
                        android:textSize="20sp"
                        android:background="@drawable/my_button_bg2"
                        android:textColor="@color/blue"

                        android:textAllCaps="false" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:background="#dfd9d9"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="|x|"
                        android:textSize="20sp"
                        android:background="@drawable/my_button_bg2"
                        android:textColor="@color/blue"

                        android:textAllCaps="false" />
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="@string/pi"
                        android:textSize="20sp"
                        android:background="@drawable/my_button_bg2"
                        android:textColor="@color/blue"
                        android:textAllCaps="false" />
                    <Button
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:text="e"
                        android:textSize="20sp"
                        android:background="@drawable/my_button_bg2"
                        android:textColor="@color/blue"
                        android:textAllCaps="false" />


                </LinearLayout>



            </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#00cc00"
            android:layout_weight="1.5"
            >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#e9e9e6"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="C"
                android:textSize="30sp"
                android:background="@drawable/my_button_bg2"
                android:textStyle="bold"
                android:textColor="@color/blue"

                 />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="("
                android:textSize="20sp"
                android:background="@drawable/my_button_bg2"
                android:textStyle="bold"
                android:textColor="@color/blue"

                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=")"
                android:textSize="20sp"
                android:background="@drawable/my_button_bg2"
                android:textStyle="bold"
                android:textColor="@color/blue"

                 />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/backspace"
                android:textSize="30sp"
                android:textStyle="bold"
                android:background="@drawable/my_button_bg2"
                android:textColor="@color/blue"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#f1eded"
            android:layout_weight="1"
            android:orientation="horizontal">


            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7"
                android:textSize="30sp"
                android:background="@drawable/my_button_bg"
                android:textColor="@color/blueDark"


                android:nestedScrollingEnabled="false"
                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8"
                android:textSize="30sp"
                android:background="@drawable/my_button_bg"
                android:textColor="@color/blueDark"

                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9"
                android:textSize="30sp"
                android:background="@drawable/my_button_bg"
                android:textColor="@color/blueDark"

                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="/"
                android:textSize="30sp"
                android:background="@drawable/my_button_bg2"
                android:textStyle="bold"
                android:textColor="@color/blue"

                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#efebeb"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4"
                android:textSize="30sp"
                android:background="@drawable/my_button_bg"
                android:textColor="@color/blueDark"


                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5"
                android:textSize="30sp"
                android:background="@drawable/my_button_bg"
                android:textColor="@color/blueDark"

               />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6"
                android:textSize="30sp"
                android:background="@drawable/my_button_bg"
                android:textColor="@color/blueDark"

               />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="*"
                android:textSize="15sp"
                android:background="@drawable/my_button_bg2"
                android:textStyle="bold"
                android:textColor="@color/blue"

                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#e9e6e6"

            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"
                android:textSize="30sp"
                android:background="@drawable/my_button_bg"
                android:textColor="@color/blueDark"

                 />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2"
                android:textSize="30sp"
                android:background="@drawable/my_button_bg"
                android:textColor="@color/blueDark"

                 />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3"
                android:textSize="30sp"
                android:background="@drawable/my_button_bg"
                android:textColor="@color/blueDark"

                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="-"
                android:textSize="30sp"
                android:background="@drawable/my_button_bg2"
                android:textStyle="bold"
                android:textColor="@color/blue"
                 />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#dfd9d9"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0"
                android:textSize="30sp"
                android:background="@drawable/my_button_bg"
                android:textColor="@color/blueDark"

                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="."
                android:textSize="30sp"
                android:background="@drawable/my_button_bg"
                android:textColor="@color/blueDark"
                 />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="="
                android:textSize="30sp"
                android:background="@drawable/my_button_bg2"
                android:textStyle="bold"
                android:textColor="#009933"

                />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+"
                android:textSize="30sp"
                android:background="@drawable/my_button_bg2"
                android:textStyle="bold"
                android:textColor="@color/blue"
                />

        </LinearLayout>



</LinearLayout>

</LinearLayout>

    </LinearLayout>




</LinearLayout>
