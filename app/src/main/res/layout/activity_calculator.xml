<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="nesada.c4q.nyc.scientificcalculator.Calculator"
    android:background="@color/grey"
    android:orientation="vertical"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#ffffff"
        android:layout_weight="2"
        android:gravity="right"
        android:layout_margin="10dp"

        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:textSize="30sp"
            android:id="@+id/tvFinish"
            android:textCursorDrawable="@color/blueDark"
            android:layout_weight="1"

            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:background="#ffffff"
            android:textSize="50sp"
            android:id="@+id/tvStart"
            android:textCursorDrawable="@color/blueDark"
            android:layout_weight="1"
            android:gravity="bottom"
            />


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:background="#00cc00"
        android:layout_weight="5"
        android:layout_margin="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#e9e9e6"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="C"
                android:textSize="40sp"
                android:background="@drawable/my_button_bg2"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:id="@+id/btnC"
                android:onClick="clearValue" />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="("
                android:textSize="30sp"
                android:background="@drawable/my_button_bg2"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:id="@+id/btnParenthesisOpen" />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text=")"
                android:textSize="30sp"
                android:background="@drawable/my_button_bg2"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:id="@+id/btnParenthesisClose" />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/backspace"
                android:textSize="40sp"
                android:textStyle="bold"
                android:background="@drawable/my_button_bg2"
                android:textColor="@color/blue"
                android:id="@+id/btnBackspace" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#f1eded"
            android:layout_weight="1"
            android:orientation="horizontal">


            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="7"
                android:textSize="40sp"
                android:background="@drawable/my_button_bg"
                android:textColor="@color/blueDark"

                android:id="@+id/btnSeven"
                android:nestedScrollingEnabled="false"
                android:onClick="addValue" />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="8"
                android:textSize="40sp"
                android:background="@drawable/my_button_bg"
                android:textColor="@color/blueDark"
                android:id="@+id/btnEight"
                android:onClick="addValue" />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="9"
                android:textSize="40sp"
                android:background="@drawable/my_button_bg"
                android:textColor="@color/blueDark"
                android:id="@+id/btnNine"
                android:onClick="addValue" />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="/"
                android:textSize="40sp"
                android:background="@drawable/my_button_bg2"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:id="@+id/btnDivide"
                android:onClick="addValue" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#efebeb"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="4"
                android:textSize="40sp"
                android:background="@drawable/my_button_bg"
                android:textColor="@color/blueDark"

                android:id="@+id/btnFour"
                android:onClick="addValue" />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="5"
                android:textSize="40sp"
                android:background="@drawable/my_button_bg"
                android:textColor="@color/blueDark"
                android:id="@+id/btnFive"
                android:onClick="addValue" />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="6"
                android:textSize="40sp"
                android:background="@drawable/my_button_bg"
                android:textColor="@color/blueDark"
                android:id="@+id/btnSix"
                android:onClick="addValue" />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="*"
                android:textSize="25sp"
                android:background="@drawable/my_button_bg2"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:id="@+id/btnX"
                android:onClick="addValue" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#e9e6e6"

            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="1"
                android:textSize="40sp"
                android:background="@drawable/my_button_bg"
                android:textColor="@color/blueDark"
                android:id="@+id/btnOne"
                android:onClick="addValue" />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="2"
                android:textSize="40sp"
                android:background="@drawable/my_button_bg"
                android:textColor="@color/blueDark"
                android:id="@+id/btnTwo"
                android:onClick="addValue" />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="3"
                android:textSize="40sp"
                android:background="@drawable/my_button_bg"
                android:textColor="@color/blueDark"
                android:id="@+id/btnThree"
                android:onClick="addValue" />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="-"
                android:textSize="40sp"
                android:background="@drawable/my_button_bg2"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:id="@+id/btnMinus"
                android:onClick="addValue" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#dfd9d9"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="0"
                android:textSize="40sp"
                android:background="@drawable/my_button_bg"
                android:textColor="@color/blueDark"
                android:id="@+id/btnZero"
                android:onClick="addValue" />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="."
                android:textSize="40sp"
                android:background="@drawable/my_button_bg"
                android:textColor="@color/blueDark"
                android:id="@+id/btnDot" />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="="
                android:textSize="40sp"
                android:background="@drawable/my_button_bg2"
                android:textStyle="bold"
                android:textColor="#009933"
                android:id="@+id/btnEqual"
                android:onClick="checkValue" />
            <Button
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="+"
                android:textSize="40sp"
                android:background="@drawable/my_button_bg2"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:id="@+id/btnPlus"
                android:onClick="addValue" />

        </LinearLayout>






    </LinearLayout>




</LinearLayout>
